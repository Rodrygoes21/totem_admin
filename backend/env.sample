# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Para desarrollo local: usa localhost
# Para producción: usa las credenciales de tu servicio de base de datos
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=totem_db

# CORS Configuration
# En desarrollo: http://localhost:5173 o http://localhost:5174
# En producción: agrega tu dominio de Vercel (ej: https://tu-app.vercel.app)
# Puedes usar múltiples orígenes separados por comas
APP_ORIGIN=http://localhost:5173,http://localhost:5174

# Ejemplos para producción:
# APP_ORIGIN=https://totem-frontend.vercel.app,http://localhost:5174
# APP_ORIGIN=https://tudominio.com,https://www.tudominio.com


